solon.logging.appender:
  console:
    pattern: "%d{yyyy-MM-dd HH:mm:ss} %-5level %magenta(${PID:-}) %white(---) %-20(%yellow([%20.20thread])) %-55(%cyan(%.32logger{30}:%L)) %msg%n"
  file:
    enable: false

solon.logging.logger:
  "org.apache":
    level: INFO
  "org.eclipse":
    level: INFO
  "org.thymeleaf":
    level: INFO